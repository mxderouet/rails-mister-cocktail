<div class="banner-showcase text-center" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= @cocktail.photo %>');"> 
    <h1><%= @cocktail.name %></h1>
</div>
<div class="container horizontal-center">
  <h2>Liste des ingrédients :</h2>
  <ul class="list">
    <% @doses.each do |dose| %>
        <li>
            <%= dose.description %> de <%= dose.ingredient.name %>
            <%= link_to dose_path(dose), method: :delete, data: { confirm: 'Are you sure?'} do %>
                  <i class="far fa-trash-alt"></i>
            <% end %>
        </li>
      <% end %>
  </ul>

  <div class="container">
    <div class="row justify-content-center space-between" style="margin: 20px">
      <div class="col-4 text-center">
        <%= link_to "Ajouter un ingrédient", new_cocktail_dose_path(@cocktail), class: "btn btn-primary" %>
      </div>
      <div class="col-4 text-center">
        <%= link_to "Liste des cocktails", root_path, class: "btn btn-primary" %>
      </div>
  </div>
</div>


