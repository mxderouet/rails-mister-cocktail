<div class="container justify-content-center">
<h1><%= @cocktail.name %></h1>
<h2>Liste des ingrédients :</h2>
<ul class="list">
  <% @doses.each do |dose| %>
      <li>
          <%= dose.description %> of <%= dose.ingredient.name %>
          <%= link_to dose_path(dose), method: :delete, data: { confirm: 'Are you sure?'} do %>
          <i class="far fa-trash-alt"></i>
          <% end %>
      </li>
    <% end %>
</ul>

<%= link_to "Ajouter un ingrédient", new_cocktail_dose_path(@cocktail), class: "btn btn-primary" %>
<%= link_to "Liste des cocktails", cocktails_path, class: "btn btn-primary" %>

</div>